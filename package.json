{
  "name": "@wix/strim",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "author": {
    "name": "Amit Shalev & Dean Shub",
    "email": "deansh@wix.com"
  },
  "main": "dist/src/index.js",
  "module": "dist/es/src/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/"
  },
  "scripts": {
    "start": "babel-node --extensions \".ts\" test/startServer.ts",
    "precommit": "lint-staged",
    "pretest": "tsc",
    "test": "jest",
    "posttest": "tslint src/**/*.ts",
    "release": "npm publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.3.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/node": "^8.0.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "jest": "^24.1.0",
    "jest-raw-loader": "^1.0.1",
    "lint-staged": "^7.2.2",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": "yoshi lint"
    },
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/.*\\.(spec|driver|testKit|testkit)\\.(ts|tsx)$",
      "/test/.*\\.*\\.*$",
      "/src/icons/.*\\.*\\.*$",
      ".*\\.graphql$",
      "devUtils.ts"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 96,
        "branches": 90,
        "functions": 95,
        "lines": 96
      }
    },
    "transform": {
      "\\.(ts|tsx)$": "babel-jest",
      "\\.(gql|graphql)$": "<rootDir>/node_modules/jest-raw-loader/index.js"
    },
    "testRegex": "/test/.*\\.spec\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "d.ts"
    ],
    "moduleNameMapper": {
      "!raw-loader!(.+graphql)$": "<rootDir>/src/services/$1"
    },
    "transformIgnorePatterns": [],
    "testURL": "http://localhost:5554"
  },
  "dependencies": {
    "express-ws": "^4.0.0",
    "fs-extra": "^7.0.1",
    "isomorphic-ws": "^4.0.1",
    "rxjs": "^6.4.0",
    "rxjs-compat": "^6.4.0",
    "webpack": "^4.29.6",
    "ws": "^6.1.4"
  },
  "optionalDependencies": {
    "express": "^4.16.4"
  }
}
